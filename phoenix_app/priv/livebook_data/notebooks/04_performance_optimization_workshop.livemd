  },
  %{
    name: "N8N Integration Latency", 
    status: :check,
    description: "Measure API call latency and timeout frequency"
  },
  %{
    name: "Reactor Workflow Overhead",
    status: :check,
    description: "Analyze middleware execution time and workflow complexity"
  },
