# AI Self-Sustaining System Environment Configuration
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost/self_sustaining_dev

# Phoenix
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret
PHX_HOST=localhost
PHX_PORT=4000

# n8n
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=your_n8n_api_key_here
N8N_WEBHOOK_USERNAME=webhook_user
N8N_WEBHOOK_PASSWORD=generate_secure_password

# OpenAI (if using API, otherwise Claude Code will be used)
OPENAI_API_KEY=optional_if_using_claude_code

# n8n Database
N8N_DB_TYPE=postgresdb
N8N_DB_POSTGRESDB_DATABASE=n8n
N8N_DB_POSTGRESDB_HOST=localhost
N8N_DB_POSTGRESDB_PORT=5432
N8N_DB_POSTGRESDB_USER=postgres
N8N_DB_POSTGRESDB_PASSWORD=postgres

# n8n Configuration
N8N_ENCRYPTION_KEY=generate_random_key_here
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# Enable n8n API
N8N_API_ENABLED=true
N8N_API_PREFIX=/api/v1

# Claude Code Path (adjust if needed)
CLAUDE_CODE_PATH=/usr/local/bin/claude

# System Mode
SYSTEM_MODE=development
AUTO_IMPROVE=true
